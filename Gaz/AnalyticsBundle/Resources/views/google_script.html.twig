<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    {% set user_id = ( user_details.acc_id is defined ) ? user_details.acc_id : 'not-set' %}

    {# Enable Google's UserId Tracking #}
    ga('set', '&uid', '{{ user_id }}');

    ga( 'create', '{{ google_options.trackingId }}' , {
        'siteSpeedSampleRate': {{ google_options.siteSpeedSampleRate }},
        'userId': '{{ user_id }}' } );

    ga( 'send', 'pageview' );

    ga( 'set', 'dimension1', '{{ user_id }}' ); {# UserAccountID #}

    ga( 'set', 'dimension2', '{{ ( user_details.sams_parent_company_name is defined ) ? user_details.sams_parent_company_name : 'not-set' }}'); {# KCParentCompanyName #}

    {% if global_report_id %}
    ga( 'set', 'dimension3', '{{ global_report_id }}' ); {# KCReportID #}

    ga( 'set', 'metric1', 1 ); {# Metric tracking for better reports #}

    ga( 'send', 'event', 'Report Viewed', '{{ global_report_id }}' );
    {% endif %}

</script>
